@model IEnumerable<ImageModel>

@{
    ViewData["Title"] = "Image List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>File Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var image in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Action("GetImage", new { id = image.Id })" width="100" height="100" />
                </td>
                <td>@image.FileName</td>
                <td>
                    <a href="@Url.Action("Details", new { id = image.Id })" class="btn btn-info">View</a>
                    <a href="@Url.Action("Edit", new { id = image.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = image.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
