@model SecurityServices.Models.Client

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h2 class="display-5" style="text-align:center">Create</h2>
<div class="row" style="margin-left:20px">
    <div class="col-md-4" >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label"></label>
                <input asp-for="ClientName" class="form-control" />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServicesAvailed" class="control-label"></label>
                <input asp-for="ServicesAvailed" class="form-control" />
                <span asp-validation-for="ServicesAvailed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffAssigned" class="control-label"></label>
                <input asp-for="StaffAssigned" class="form-control" />
                <span asp-validation-for="StaffAssigned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

