@model IEnumerable<SecurityServices.Models.ImageModelAgain>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ServicesLayout.cshtml";
}
<div class="single-services">
    <div class="container">
        <div class="row" id="tabs">
        @foreach (var service in Model)
      {
        
           
            <div class="col-md-4">
                <ul>
                    <li><a href='#tabs-1'>@service.Name <i class="fa fa-angle-right"></i></a></li>
                  
                </ul>
            </div>
            <div class="col-md-8">
                <section class='tabs-content'>
                    <article id='tabs-1'>
                  
                        
                            <img src="@Url.Action("GetServiceImage", new { id = service.Id })" />
                            <h4>@service.Name</h4>
                            <p>@service.Description</p>
                     

                    
                    </article>
                   
                </section>
            </div>
        
    
 
    
}
        </div>
</div>