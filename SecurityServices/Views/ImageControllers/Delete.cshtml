@model SecurityServices.Models.ImageModelAgain;

@{
    ViewData["Title"] = "Delete Service";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete the following service?</h3>

<div>
    <h4>@Model.Name</h4>
    <p><strong>Description:</strong> @Model.Description</p>

    @if (Model.Data != null && Model.Data.Length > 0)
    {
        <div>
            <label>Current Image:</label>
            <img src="@Url.Action("GetServiceImage", new { id = Model.Id })" width="100" height="100" />
        </div>
    }
</div>

<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
