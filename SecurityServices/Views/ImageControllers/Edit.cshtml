@model SecurityServices.Models.ImageModelAgain;
@{
    ViewData["Title"] = "Edit Service";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <!-- Hidden field to keep the service id for editing -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Name">Service Name:</label>
        <input type="text" name="name" class="form-control" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="Description">Service Description:</label>
        <textarea name="description" class="form-control" required>@Model.Description</textarea>
    </div>

    <div class="form-group">
        <label for="imageFile">Service Image (Optional):</label>
        <input type="file" name="imageFile" class="form-control" />
        <small>If you want to change the image, choose a new file.</small>
    </div>

    @if (Model.Data != null && Model.Data.Length > 0)
    {
        <div class="form-group">
            <label>Current Image:</label>
            <img src="@Url.Action("GetServiceImage", new { id = Model.Id })" width="100" height="100" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
