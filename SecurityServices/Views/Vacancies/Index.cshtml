@model IEnumerable<SecurityServices.Models.Vacancy>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CareerLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFilled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFilled)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VacancyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VacancyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VacancyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
